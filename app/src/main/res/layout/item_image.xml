            android:textColor="#6C6767"
            android:textSize="13dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:layout_marginStart="15sp"
            android:text="@string/razdelenie" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="75dp"
            android:text="@string/what_s_included"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="95dp"
            android:text="@string/essentials"
            android:textColor="#6C6767"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="115dp"
            android:text="@string/razdelenie"
            android:layout_marginStart="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="145dp"
            android:text="@string/what_s_not_included"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="165dp"
            android:text="@string/essentials"
            android:textColor="#6C6767"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="310sp"
            android:layout_marginTop="15dp"
            android:background="@drawable/biggersign" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/biggersign" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/biggersign" />


    </FrameLayout>

    <Button
        android:layout_width="380sp"
        android:layout_height="50sp"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        android:text="К выбору номера"
        android:textSize="20sp"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>